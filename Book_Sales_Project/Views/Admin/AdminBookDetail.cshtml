@using EntityLayer.Concrete
@model Book
@{
    ViewData["Title"] = "AdminBookDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Kitaplar</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Kitap Detayı</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12 col-md-12 col-lg-8 order-2 order-md-1">
                        <div class="row">
                            <div class="col-12 col-sm-4">
                                <div class="info-box bg-light">
                                    <div class="info-box-content">
                                        @{
                                            byte[] imageBytes = @Model.ImageUrl1;
                                            string base64String = Convert.ToBase64String(imageBytes);
                                            string imgSrc = string.Format("data:image/jpeg;base64,{0}", base64String);
                                        }
                                        <img src="@imgSrc" alt="IMG-PRODUCT">
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-sm-4">
                                <div class="info-box bg-light">
                                    <div class="info-box-content">
                                        @{
                                            byte[] imageBytes2 = @Model.ImageUrl2;
                                            string base64String2= Convert.ToBase64String(imageBytes2);
                                            string imgSrc2 = string.Format("data:image/jpeg;base64,{0}", base64String);
                                        }
                                        <img src="@imgSrc2" alt="IMG-PRODUCT">
                                    </div>
                                </div>
                            </div>
                          
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <h4>Kitap Bilgileri</h4>
                                <br />
                                <div class="post">
                                    <span class="stext-105 cl4  trans-04 js-name-b2 p-b-6">
                                            Kitap Adı :
                                        </span>
                                        <span class="stext-102 cl3 p-t-23">
                                            @Model.Name
                                        </span>                                  
                                </div>
                                <div class="post">
                                    <span class="stext-106 cl4">
                                        Yazar :
                                    </span>
                                    <span class="stext-102 cl3 p-t-23">
                                        @Model.Author
                                    </span>
                                </div>
                                <div class="post">
                                    <span class="stext-106 cl4">
                                        Kitap Açıklaması :
                                    </span>
                                    <span class="stext-102 cl3 p-t-23">
                                        @Model.Description
                                    </span>
                                </div>
                                <div class="post">
                                    <span class="stext-106 cl4">
                                        Kitabın Durumu :
                                    </span>
                                    <span class="stext-102 cl3 p-t-23">
                                        @(Model?.isNew ?? false ? "Yeni Kitap" : "2. El Kitap")
                                    </span>
                                </div>
                                <div class="post">
                                    <span class="stext-106 cl4">
                                        Sayfa Sayısı :
                                    </span>
                                    <span class="stext-102 cl3 p-t-23">
                                        @Model.PageCount
                                    </span>
                                </div>
                                <div class="post">
                                    <span class="stext-106 cl4">
                                        Kitap Fiyatı :
                                    </span>
                                    <span class="stext-102 cl3 p-t-23">
                                        @Model.Price
                                    </span>
                                </div>
                                <div class="post">
                                    <span class="stext-106 cl4">
                                        Stok Sayısı :
                                    </span>
                                    <span class="stext-102 cl3 p-t-23">
                                        @Model.Stock
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                  
                </div>
            </div>

        </div>

    </section>
</body>
</html>