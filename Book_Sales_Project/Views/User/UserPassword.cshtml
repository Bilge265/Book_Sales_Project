@using EntityLayer.Concrete
@model PasswordViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>COZA STORE</title>
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="animsition">

    <div class="bg0 m-t-23 p-b-140">
        <div class="container">
            @await Html.PartialAsync("Partial/MenuListPartial")

            <section class="content">
                <div class="row">
    
                    <div class="col-md-12">
                        <div class="card card-secondary">
                            <div class="card-header">
                                <h3 class="card-title">Şifre Güncelleme</h3>

                            </div>
                            <div class="card-body">
                                 @using (Html.BeginForm("UserPassword", "User", FormMethod.Post))
                                {
                                <div class="form-group">
                                    <label for="inputEstimatedBudget">Eski şifre</label>
                                        @Html.TextBoxFor(x=>x.CurrentPassword,new { @class = "form-control", type="password" })
                                        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label for="inputSpentBudget">Yeni Şifre</label>
                                        @Html.TextBoxFor(x=>x.NewPassword,new { @class = "form-control" ,type="password"})
                                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label for="inputEstimatedDuration">Yeni Şifre(Tekrar)</label>
                                        @Html.TextBoxFor(x=>x.ConfirmPassword,new { @class = "form-control",type="password" })
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                <input type="submit" value="Güncelle" class="button-login float-right">
                                }

                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                    </div>
                </div>

            </section>


        </div>
    </div>
    <script src="~/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/AdminLTE-3.0.4/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- AdminLTE for demo purposes -->
    <script src="~/AdminLTE-3.0.4/dist/js/demo.js"></script>
</body>
</html>

